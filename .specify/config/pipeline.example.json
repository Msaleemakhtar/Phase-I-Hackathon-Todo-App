{
  "pipeline": {
    "skip_phases": [],
    "auto_approve_phases": ["validation"],
    "require_approval_phases": ["implementation"],
    "default_starting_phase": "validation"
  },
  "validation": {
    "max_clarifications": 3,
    "block_threshold": 3,
    "forbidden_terms": [
      "API", "endpoint", "REST", "GraphQL", "database", "schema",
      "React", "Vue", "Python", "JavaScript", "Redis", "PostgreSQL"
    ]
  },
  "clarification": {
    "auto_trigger": true,
    "questions": [
      "Is the feature scope clear?",
      "Would a planner know what feature structure to design?",
      "Are there any remaining ambiguities?",
      "Is this specification ready for the planning phase?"
    ]
  },
  "adr": {
    "enabled": true,
    "significance_thresholds": {
      "impact_score": 7.0,
      "min_alternatives": 2,
      "scope_score": 6.0
    },
    "auto_create": false
  },
  "implementation": {
    "test_strategy": "tdd",
    "test_coverage_threshold": 80,
    "pause_on_test_failure": true,
    "pause_on_task_completion": false
  },
  "reporting": {
    "generate_phr": true,
    "phr_stage": "misc",
    "verbose_output": true,
    "execution_report": true
  },
  "project": {
    "name": "todo-app",
    "tech_stack": ["Python", "pytest"],
    "constitution_path": ".specify/memory/constitution.md",
    "templates_dir": ".specify/templates",
    "specs_dir": "specs"
  }
}
